---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #fff;
		--secondary: #2786d4;
		--font-secondary: #252b42;
		--text: #080808;
		--text-secondary: #222222;
	}

	*{
		padding: 0;
		margin: 0;
	}

	html{
		font-family: "baloon 2", system-ui, sans-serif;
	}
	
</style>
