---
import Card from "./Card.astro";
import Geometric from "./features-icons/Geometric.astro";
import Draw from "./features-icons/Draw.astro";
import Paint from "./features-icons/Paint.astro";

---

<section>
  <div class="features-container">
    <h2>Features</h2>
    <h3>
      Most calendars are designed for teams. Slate is designed for freelancers
    </h3>
    <div class="feature-cards">
      <Card
        title="OpenType features Variable fonts"
        description="Slate helps you see how many more days you need to work to reach your financial goal"
      ><Geometric></Geometric></Card>

      <Card
        title="Design wiht real data"
        description="Slate helps you see how many more days you need to work to reach your financial goal"
        ><Draw></Draw></Card>

      <Card
        title="Fastest way to take action"
        description="Slate helps you see how many more days you need to work to reach your financial goal"
        ><Paint></Paint></Card>
    </div>
    <div class="video-container">
      <video autoplay class="video">
        <source src="bussines.mp4" type="video/mp4" />
      </video>
    </div>
  </div>
</section>

<style>
  .features-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  h2 {
    display: flex;
    text-align: center;
    justify-content: center;
    font-size: 2rem;
    color: var(--text);
    margin-top: 40px;
    margin-bottom: 30px;
  }

  h3 {
    max-width: 350px;
    display: flex;
    text-align: center;
    justify-content: center;
    color: var(--text-secondary);
    margin-bottom: 80px;
  }

  .feature-cards {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    width: 800px;
    margin-bottom: 80px;
  }

  .video-container{
    display: flex;
    min-width: 400px;
    max-width: 850px;
  }

  video {
    width: 100%;
    border-radius: 30px;
    filter: drop-shadow(1px 1px 8px rgb(121, 120, 120));
  }
</style>

<script>
  const video = document.querySelector("video");

  video.addEventListener("click", () => {
    if (video.paused) {
      video.play();
    } else {
      video.pause();
    }
  })
</script>
